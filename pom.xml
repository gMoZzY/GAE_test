<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                          http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
     
    <groupId>se.test</groupId>
    <artifactId>GAE_test</artifactId>
    <version>1.0</version>
    <packaging>war</packaging>
    
    <properties>
    	<appengine.sdk.version>1.9.46</appengine.sdk.version>
    	<restlet.gae.version>2.1.4</restlet.gae.version>
    </properties>

    <repositories>
	    <repository>
	  		<id>maven-restlet</id>
	  		<name>Public online Restlet repository</name>
	  		<url>http://maven.restlet.com</url>
		</repository>
	</repositories>

	<dependencies>	
		<!-- Google -->
		<dependency>
            <groupId>com.google.appengine</groupId>
            <artifactId>appengine-api-1.0-sdk</artifactId>
            <version>${appengine.sdk.version}</version>
		</dependency>
			<!-- BigQuery -->
		<dependency>
      		<groupId>com.google.cloud</groupId>
      		<artifactId>google-cloud-bigquery</artifactId>
      		<version>0.4.0</version>
    	</dependency>
			<!-- MEMCACHE -->
		<dependency>
      		<groupId>com.googlecode.xmemcached</groupId>
      		<artifactId>xmemcached</artifactId>
      		<version>2.2.0</version>
		</dependency>
		
		
		
		<!-- Restlet -->
		<dependency>
  			<groupId>org.restlet.gae</groupId>
  			<artifactId>org.restlet.ext.json</artifactId>
  			<version>${restlet.gae.version}</version>
		</dependency>
		<dependency>
  			<groupId>org.restlet.gae</groupId>
  			<artifactId>org.restlet.ext.jackson</artifactId>
  			<version>${restlet.gae.version}</version>
		</dependency>		
		<dependency>
			<groupId>org.restlet.gae</groupId>
    		<artifactId>org.restlet.ext.servlet</artifactId>
    		<version>${restlet.gae.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
   				<groupId>com.google.appengine</groupId>
   				<artifactId>appengine-maven-plugin</artifactId>
   				<version>${appengine.sdk.version}</version>
   				<configuration>
        			<jvmFlags>
        				<jvmFlag>-Xdebug</jvmFlag>
            			<jvmFlag>-Xrunjdwp:transport=dt_socket,address=9090,server=y,suspend=n</jvmFlag>
        			</jvmFlags>
        			<disableUpdateCheck>true</disableUpdateCheck>
    			</configuration>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <version>2.5.1</version>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                </configuration>
			</plugin>
		</plugins>
	</build> 

</project>
